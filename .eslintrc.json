{
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "_comment":"this enable jsx in the eslint validator",
            "jsx": true
        }
    },

    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-extra-semi": "warn",
        "no-cond-assign": "error",
        "no-extra-parens": "warn",
        "no-irregular-whitespace": "warn",
        "no-constant-condition": "warn",
        "comma-dangle": "error"
    }
}
